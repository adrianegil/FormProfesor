<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAzu"
    tools:context="com.proyecto.gilsoft.formprofesor.app.PregSeleccionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/Toolb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:logo="@mipmap/ic_seleccion"
        app:title="Pregunta de SelecciÃ³n"

        app:titleTextColor="@android:color/white" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Toolb1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/colorAzulClaro"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <TextView
                android:id="@+id/TextViewEnumPregSelecc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_weight="0.05"
                android:gravity="start"
                android:hint=""
                android:padding="5dp"
                android:textAlignment="viewStart"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/TextViewOpcSelecc3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TextViewOpcSelecc2"
                android:layout_toEndOf="@+id/checkBoxRespOpc3"
                android:layout_toRightOf="@+id/checkBoxRespOpc3"
                android:gravity="start"
                android:hint=""
                android:textAlignment="viewStart"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkBoxRespOpc1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/TextViewOpcSelecc1"
                android:layout_alignBottom="@+id/TextViewOpcSelecc1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text=""
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="135dp" />

            <TextView
                android:id="@+id/TextViewOpcSelecc1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/TextViewEnumPregSelecc"
                android:layout_toEndOf="@+id/checkBoxRespOpc1"
                android:layout_toRightOf="@+id/checkBoxRespOpc1"
                android:gravity="center_horizontal"
                android:hint=""
                android:textAlignment="viewStart"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkBoxRespOpc2"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/TextViewOpcSelecc2"
                android:layout_alignBottom="@+id/TextViewOpcSelecc2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="" />

            <TextView
                android:id="@+id/TextViewOpcSelecc2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/TextViewOpcSelecc1"
                android:layout_toEndOf="@+id/checkBoxRespOpc2"
                android:layout_toRightOf="@+id/checkBoxRespOpc2"
                android:gravity="center_horizontal"
                android:hint=""
                android:textAlignment="viewStart"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkBoxRespOpc3"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/TextViewOpcSelecc3"
                android:layout_alignBottom="@+id/TextViewOpcSelecc3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnEvaluarPregSelecc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="@drawable/btnripple2"
        android:text="Evaluar Pregunta"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>
